		
	.EQU 	@,$000
	.EQU 	KEYBOARD_STATUS, $000
	.EQU 	KEYBOARD_DATA, $001
PASSWORD:	.CHAR 'get pwned'
WORD_LENGTH:	.WORD 9

	LDX# 	$000

POLL_KEYBD:	INB 	KEYBOARD_STATUS
	JGE 	POLL_KEYBD
	INB 	KEYBOARD_DATA
	STA+ 	$D00
	CMX# 	WORD_LENGTH
	JGE 	CHECK
	ADX# 	$001
	JMP 	POLL_KEYBD

CHECK:

DELETE:
	.EQU @, $000
	LDA# 	$FFF
	STA 	$000
	LDX# 	$001
	LDA# 	$000
	STA+ 	$001
	ADX# 	$001
	CMX 	$000
	JEQ 	HLT

HLT: 	HLT
